                <th><%= keys[13] %></th>
                <!-- Updated At -->
                <th>Days Since Last Update</th>
                <!-- Days Difference -->
                <th>Options</th>
                <!-- Options -->
              </tr>
            </thead>
            <tbody class="table-bordered"></tbody>
          </table>
        </div>
      </div>
    </div>

    <%-include('./partials/modal.ejs') %>

    <script src="../javascripts/common.js"></script>

