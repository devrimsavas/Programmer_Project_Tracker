            class="table table-bordered align-middle table-striped shadow"
            id="program-table"
          >
            <thead class="align-middle">
              <tr>
                <th><%= keys[2] %></th>
                <!-- ID -->
                <th><%= keys[1] %></th>
                <!-- Plan Name -->
                <th><%= keys[12] %></th>
