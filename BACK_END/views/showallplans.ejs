<html lang="en">
  <head>
    <%-include('./partials/header.ejs') %>
  </head>
  <%-include('./partials/navbar.ejs') %>
  <body class=" ">
    <div class="container-fluid mt-4 p-1 bg-primary rounded-3"></div>

    <div class="row justify-content-md-center">
      <div class="col-5"><%-include('./partials/createupdateform.ejs') %></div>

      <div class="col-7 border rounded-3 shadow">
        <div class="table-responsive">
          <h3 class="bg-info mt-2 rounded-3">Plans Summary</h3>
          <hr />
